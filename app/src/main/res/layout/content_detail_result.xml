<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:visibility="gone"
    app:behavior_draggable="false"
    app:layout_behavior="@string/bottom_sheet_behavior"
    app:shapeAppearance="?attr/shapeAppearanceLargeComponent"
    tools:visibility="visible">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/iv_icon"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:layout_gravity="center_horizontal"
            android:layout_margin="@dimen/dimens_margin_16"
            tools:ignore="ContentDescription"
            tools:src="@drawable/ic_success" />

        <TextView
            android:id="@+id/tv_title"
            style="@style/TextAppearance.AppCompat.Title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="@dimen/dimens_margin_16"
            android:textAlignment="center"
            tools:text="Success" />

        <TextView
            android:id="@+id/tv_message"
            style="@style/TextAppearance.MaterialComponents.Body1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="@dimen/dimens_margin_16"
            android:layout_marginTop="@dimen/dimens_margin_16"
            android:layout_marginBottom="50dp"
            android:textAlignment="center"
            tools:text="Congratulation, You've Registered \n No need to scan again." />

        <Button
            android:id="@+id/btn_action"
            style="@style/ButtonSubmit"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="@dimen/dimens_margin_16"
            android:layout_marginTop="50dp"
            android:layout_marginBottom="@dimen/dimens_margin_16"
            android:enabled="true"
            android:text="@string/action_ok" />
    </LinearLayout>

</FrameLayout>